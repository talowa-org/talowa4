rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Feed posts media - public reads with CDN optimization
    match /feed_posts/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // 10MB limit
        && request.resource.contentType.matches('image/.*|video/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Legacy feed_posts path (flat structure)
    match /feed_posts/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|video/.*');
    }

    // Stories media - public reads with expiration
    match /stories/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit for stories
        && request.resource.contentType.matches('image/.*|video/.*');
      allow delete: if request.auth != null;
    }

    // Profile media - read public; write only by owner
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }

    // Optimized thumbnails - public read, system write
    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // CDN cache assets - public read
    match /cache/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only system can write cache
    }

    // Deny by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}