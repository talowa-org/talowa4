rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function signedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }
    
    // Enhanced admin role checking with Custom Claims
    function isAdmin() {
      return signedIn() && request.auth.token.role != null && 
             request.auth.token.role in ['super_admin', 'moderator', 'regional_admin', 'auditor'];
    }
    
    function isSuperAdmin() {
      return signedIn() && request.auth.token.role == 'super_admin';
    }
    
    function isModerator() {
      return signedIn() && request.auth.token.role in ['super_admin', 'moderator'];
    }
    
    function isAuditor() {
      return signedIn() && request.auth.token.role in ['super_admin', 'auditor'];
    }
    
    function isRegionalAdmin() {
      return signedIn() && request.auth.token.role in ['super_admin', 'regional_admin'];
    }
    
    // Users collection - strict field protection with enhanced security
    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if isOwner(uid) && 
        // Prevent users from creating accounts with admin roles
        !('role' in request.resource.data) &&
        !('adminRole' in request.resource.data) &&
        !('status' in request.resource.data);
      allow update: if isOwner(uid) && 
        // Block modification of protected fields by regular users
        !('referral' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('role' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('adminRole' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('referralStats' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('status' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('bannedAt' in request.resource.data.diff(resource.data).affectedKeys()) &&
        !('bannedBy' in request.resource.data.diff(resource.data).affectedKeys());
      // Allow admins to update user data for moderation
      allow update: if isAdmin();
      allow delete: if isSuperAdmin(); // Only super_admin can delete users
    }
    
    // User registry - allow unauthenticated reads for login verification
    match /user_registry/{phoneNumber} {
      allow read: if true; // Login verification needs this
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if signedIn() && resource.data.uid == request.auth.uid;
    }
    
    // Referral codes - restricted access, managed by Cloud Functions
    match /referralCodes/{code} {
      allow read: if signedIn(); // Users can read codes for validation
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Referral relationships - managed by Cloud Functions
    match /referrals/{referrerUid}/direct/{refereeUid} {
      allow read: if signedIn() && (request.auth.uid == referrerUid || request.auth.uid == refereeUid);
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Phone registry for login verification
    match /phones/{phoneNumber} {
      allow read: if true; // Needed for login verification
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Phone verifications - temporary storage for OTP verification state
    match /phone_verifications/{phoneNumber} {
      allow read: if true; // Needed for registration flow
      allow create: if true; // Allow creation during OTP verification
      allow update: if true; // Allow updates during verification process
      allow delete: if true; // Allow cleanup after registration
    }
    
    // Daily motivations - allow read for all authenticated users
    match /dailyMotivations/{docId} {
      allow read: if signedIn();
      allow write: if false; // Only admin/cloud functions can write
    }
    
    // Hashtags - allow read for all authenticated users
    match /hashtags/{docId} {
      allow read: if signedIn();
      allow write: if false; // Only admin/cloud functions can write
    }
    
    // Analytics - allow read for authenticated users
    match /analytics/{docId} {
      allow read: if signedIn();
      allow write: if false; // Only admin/cloud functions can write
    }
    
    // Stories - allow read for authenticated users, write for own stories
    match /stories/{storyId} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if signedIn() && resource.data.authorId == request.auth.uid;
    }
    
    // Posts - allow read for everyone, write for authenticated users
    match /posts/{postId} {
      allow read: if true; // Everyone can view posts
      allow create: if signedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if signedIn() && (
        // Allow post author to update their own post
        resource.data.authorId == request.auth.uid ||
        // Allow any authenticated user to update like/comment/share counts
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likesCount', 'commentsCount', 'sharesCount', 'updatedAt'])) ||
        // Allow admins to update any post
        isAdmin()
      );
      allow delete: if signedIn() && (resource.data.authorId == request.auth.uid || isAdmin());
      
      // Comments for each post
      match /comments/{commentId} {
        allow read: if true; // Everyone can view comments
        allow create: if signedIn();
        allow update, delete: if signedIn() && resource.data.authorId == request.auth.uid;
      }
      
      // Likes for each post
      match /likes/{likeId} {
        allow read: if true; // Everyone can view likes
        allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
        allow delete: if signedIn() && resource.data.userId == request.auth.uid;
      }
    }
    
    // Post likes collection (alternative structure)
    match /post_likes/{likeId} {
      allow read: if true;
      allow create: if signedIn();
      allow delete: if signedIn();
      allow update: if signedIn();
    }
    
    // Post bookmarks collection
    match /post_bookmarks/{bookmarkId} {
      allow read: if true;
      allow create: if signedIn();
      allow delete: if signedIn();
      allow update: if signedIn();
    }
    
    // Post comments collection (alternative structure)
    match /post_comments/{commentId} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if signedIn() && resource.data.authorId == request.auth.uid;
    }
    
    // Post shares collection
    match /post_shares/{shareId} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if signedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Comment likes collection
    match /comment_likes/{likeId} {
      allow read: if true;
      allow create: if signedIn();
      allow delete: if signedIn();
      allow update: if signedIn();
    }
    

    
    // Admin collections - PROTECTED SIMPLE MODEL (Checkpoint 7)
    // ⚠️ DO NOT CHANGE - This is the working authentication system
    match /admin/{document=**} {
      allow read, write: if signedIn() &&
        (request.auth.token.email == 'admin@talowa.org' ||
         request.auth.token.role == 'admin' ||
         request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2']); // Replace with actual admin UIDs
    }

    // Admin configuration - simple admin access (PROTECTED)
    match /admin_config/{document} {
      allow read, write: if signedIn() &&
        (request.auth.token.email == 'admin@talowa.org' ||
         request.auth.token.role == 'admin' ||
         request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2']);
    }

    // Admin audit logs - simple admin access (PROTECTED)
    match /admin_audit_logs/{document} {
      allow read, write: if signedIn() &&
        (request.auth.token.email == 'admin@talowa.org' ||
         request.auth.token.role == 'admin' ||
         request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2']);
    }

    // Admin role assignments - simple admin access (PROTECTED)
    match /admin_roles/{document} {
      allow read, write: if signedIn() &&
        (request.auth.token.email == 'admin@talowa.org' ||
         request.auth.token.role == 'admin' ||
         request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2']);
    }

    // Admin sessions - simple admin access (PROTECTED)
    match /admin_sessions/{document} {
      allow read, write: if signedIn() &&
        (request.auth.token.email == 'admin@talowa.org' ||
         request.auth.token.role == 'admin' ||
         request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2']);
    }

    // Admin notifications - simple admin access (PROTECTED)
    match /admin_notifications/{document} {
      allow read, write: if signedIn() &&
        (request.auth.token.email == 'admin@talowa.org' ||
         request.auth.token.role == 'admin' ||
         request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2']);
    }
    // Messages collection - messaging system
    match /messages/{messageId} {
      allow read: if signedIn() && (
        request.auth.uid == resource.data.senderId ||
        request.auth.uid in resource.data.get('participantIds', []) ||
        isAdmin()
      );
      allow create: if signedIn() && request.auth.uid == request.resource.data.senderId;
      allow update: if signedIn() && (
        request.auth.uid == resource.data.senderId ||
        isAdmin()
      );
      allow delete: if signedIn() && (
        request.auth.uid == resource.data.senderId ||
        isAdmin()
      );
    }

    // Conversations collection - messaging system
    match /conversations/{conversationId} {
      allow read: if signedIn() && (
        request.auth.uid in resource.data.participantIds ||
        isAdmin()
      );
      allow create: if signedIn() && request.auth.uid in request.resource.data.participantIds;
      allow update: if signedIn() && (
        request.auth.uid in resource.data.participantIds ||
        isAdmin()
      );
      allow delete: if signedIn() && (
        request.auth.uid == resource.data.createdBy ||
        isAdmin()
      );
    }

    // Voice calls collection - calling system
    match /voice_calls/{callId} {
      allow read: if signedIn() && (
        request.auth.uid == resource.data.callerId ||
        request.auth.uid == resource.data.recipientId ||
        request.auth.uid in resource.data.get('participantIds', []) ||
        isAdmin()
      );
      allow create: if signedIn() && request.auth.uid == request.resource.data.callerId;
      allow update: if signedIn() && (
        request.auth.uid == resource.data.callerId ||
        request.auth.uid == resource.data.recipientId ||
        request.auth.uid in resource.data.get('participantIds', []) ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }

    // Call history collection - call records
    match /call_history/{historyId} {
      allow read: if signedIn() && (
        request.auth.uid == resource.data.callerId ||
        request.auth.uid == resource.data.recipientId ||
        isAdmin()
      );
      allow create: if signedIn() && (
        request.auth.uid == request.resource.data.callerId ||
        request.auth.uid == request.resource.data.recipientId
      );
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Health check collection - for connection monitoring
    match /health_check/{document} {
      allow read, write: if signedIn();
    }

    // Other collections - default permissions for user-owned data
    match /{document=**} {
      allow read: if signedIn();
      allow write: if signedIn() && 
        (request.resource.data.keys().hasAny(['uid', 'userId', 'authorId']) == false ||
         request.resource.data.uid == request.auth.uid ||
         request.resource.data.userId == request.auth.uid ||
         request.resource.data.authorId == request.auth.uid);
    }
  }
}