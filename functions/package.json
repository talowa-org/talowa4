    "firebase-functions": "^4.9.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.104.0",
    "redis": "^4.6.13",
    "socket.io": "^4.7.5",
    "zod": "^3.22.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.0"
  }
}
