{
  "name": "talowa-functions",
  "description": "Firebase Cloud Functions for TALOWA (AI Assistant backend and utilities)",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf lib",
